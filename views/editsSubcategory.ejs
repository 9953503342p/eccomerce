<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Subcategory</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100">
    <%- include('header') %>
    <%- include('slidderbar') %>

    <div class="p-6 max-w-md mx-auto bg-white rounded shadow mt-10">
        <h2 class="text-2xl font-bold mb-4">Edit Subcategory</h2>
        <form action="/subcategory/edit/<%= subcategory._id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-4">
                <label class="block text-sm font-medium mb-2" for="category">Category</label>
                <select name="categoryname" id="category" class="border rounded w-full p-2" required>
                    <option value="">Select a category</option>
                    <% categories.forEach(category => { %>
                        <option value="<%= category.name %>" <%= category.name === subcategory.categoryname ? 'selected' : '' %>>
                            <%= category.name %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-2" for="name">Subcategory Name</label>
                <input type="text" name="subcategoryname" id="name" value="<%= subcategory.subcategoryname %>" class="border rounded w-full p-2" required />
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-2" for="description">Description</label>
                <textarea name="subcategorydescription" id="description" class="border rounded w-full p-2" required><%= subcategory.subcategorydescription %></textarea>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-2" for="subcategoryImage">Image</label>
                <input type="file" name="subcategoryimage" id="image" class="border rounded w-full p-2" />
                <% if (subcategory.subcategoryImage) { %>
                    <img src="/<%= subcategory.subcategoryImage %>" alt="Current Image" class="w-20 h-20 mt-4 object-cover">
                <% } %>
            </div>

            <button type="submit" class="bg-blue-500 text-white rounded p-2 w-full">Update Subcategory</button>
        </form>
    </div>

    <%- include('footer') %>
</body>
</html>
